<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/buttonDeleteObject"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/recycle_bin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/ownedObjectName"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:fontFamily="@font/agency"
            android:gravity="center_vertical"
            android:text="Sub item title"
            android:textColor="#000000"
            android:textSize="21sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteObject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lastTimeDisinfected"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:fontFamily="@font/agency"
            android:text="Last time disinfected"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonDeleteObject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ownedObjectName" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>